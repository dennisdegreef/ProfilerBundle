<?xml version="1.0" encoding="utf-8"?>

<phpunit bootstrap="./vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="Link0 Profiler-Bundle">
            <directory>./src/Link0/ProfilerBundle/Tests/EventListener</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/Link0/ProfilerBundle</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html"
            title="Link0 Profiler-Bundle"
            target="build/coverage"
            charset="UTF-8"
            yui="true"
            highlight="true"
            lowUpperBound="35"
            highLowerBound="70" />
        <log type="coverage-clover" target="build/logs/clover.xml"/>
        <log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false" />
    </logging>
</phpunit>
